{
  "name": "express-mongoose-template",
  "version": "1.0.0",
  "description": "express-mongoose-template",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "cross-env NODE_ENV=test mocha test/**/*.ts --exit",
    "test:debug": "cross-env NODE_ENV=test mocha --inspect-brk test/**/*.ts --exit",
    "test:junit": "cross-env NODE_ENV=test mocha test/**/*.ts --reporter mocha-junit-reporter --reporter-options mochaFile=./test/test-results.xml --exit",
    "lint": "tsc --noUnusedLocals --noEmit && prettier -c \"{server,test}/**/*.{ts,tsx}\" --write"
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-openapi-validator": "^3.15.1",
    "mongoose": "^5.9.19",
    "mongoose-sequence": "^5.2.2",
    "morgan": "^1.10.0",
    "pino": "^6.3.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.32",
    "@types/chai": "^4.2.11",
    "@types/express": "^4.17.1",
    "@types/mocha": "^7.0.2",
    "@types/mongoose": "^5.7.5",
    "@types/morgan": "^1.9.1",
    "@types/pino": "^6.0.1",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "mocha": "^7.2.0",
    "mocha-junit-reporter": "^2.0.0",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.0.0",
    "prettier": "2.0.5",
    "shelljs": "^0.8.4",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5"
  }
}
