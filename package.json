{
  "name": "express-mongoose-template",
  "version": "1.0.0",
  "description": "express-mongoose-template",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "compile": "ts-node build.ts && tsc",
    "dev": "nodemon server/index.ts | pino-pretty",
    "dev:debug": "nodemon --exec \"node -r ts-node/register --inspect-brk\" server/index.ts | pino-pretty",
    "test": "cross-env NODE_ENV=test mocha test/**/*.ts --exit",
    "test:debug": "cross-env NODE_ENV=test mocha --inspect-brk test/**/*.ts --exit",
    "test:junit": "cross-env NODE_ENV=test mocha test/**/*.ts --reporter mocha-junit-reporter --reporter-options mochaFile=./test/test-results.xml --exit",
    "lint": "tsc --noUnusedLocals --noEmit && prettier -c \"{server,test}/**/*.{ts,tsx}\" --write"
  },
  "dependencies": {
    "bluebird": "^3.5.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-openapi-validator": "^1.6.1",
    "mongoose": "^5.6.9",
    "mongoose-sequence": "^5.1.0",
    "morgan": "^1.9.1",
    "pino": "^5.13.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/chai": "^4.2.0",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/mongoose": "^5.5.12",
    "@types/morgan": "^1.7.37",
    "@types/pino": "^5.8.9",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "mocha": "^6.1.4",
    "mocha-junit-reporter": "^1.23.1",
    "nodemon": "^1.19.0",
    "pino-pretty": "^3.2.1",
    "prettier": "1.18.2",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^8.0.2",
    "tslint": "^5.13.1",
    "typescript": "^3.4.5"
  }
}
